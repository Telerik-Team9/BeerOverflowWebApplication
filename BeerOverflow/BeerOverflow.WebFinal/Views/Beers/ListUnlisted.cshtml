@model BeerSearchViewModel
@{var beers = Model.Beers.ToList();}


@{
    ViewData["Title"] = "Beers";
}

@if (Model.Beers.Count == 0)
{
    @Html.DisplayName("NO BEERS FOUND!");
}
else
{
    <table class="table table-hover table-dark container">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => beers[0].Name)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Beers)
            {
                <tr>
                    <td>
                        <img src="~/images/beers/@item.ImageURL" width="100px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
</div>
