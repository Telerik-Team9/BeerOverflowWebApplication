@model BeerSearchViewModel
@{var beers = Model.Beers.ToList();}


@{
    ViewData["Title"] = "Beers";
}


    <div class="container-fluid" id="beer-index">

        <div>
            <form class="form-inline d-flex justify-content-center md-form form-sm active-orange" asp-controller="Beers" asp-action="Search" method="post">
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control form-control-sm ml-3 w-75 active-orange" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.StyleName"></label>
                    <select asp-for="@Model.StyleName" asp-items="@(new SelectList(ViewBag.message))" class="form-control">
                        <option selected="selected"></option>
                    </select>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.SortBy" class="form-check-input" type="radio" name="sortby" value="name" checked>
                    <label for="name">Name</label>
                    <input asp-for="@Model.SortBy" class="form-check-input" type="radio" name="sortby" value="abv">
                    <label for="abv">Alcohol %</label>
                    <input asp-for="@Model.SortBy" class="form-check-input" type="radio" name="sortby" value="rating">
                    <label for="rating">Rating</label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">SEARCH</button>
                </div>
            </form>
        </div>

        <h1 class="cover-heading cursive-h1">Our beers</h1>

        @if (User.Identity.IsAuthenticated)
        {
            <p>
                <a asp-action="Create">Create New</a>
            </p>
        }
        @if (User.IsInRole("Admin"))
        {
            <div>
                <a asp-controller="Beers" asp-action="ListUnlisted">See Unlisted beers</a>
            </div>
        }
        @if (Model.Beers.Count == 0)
        {
            @Html.DisplayName("NO BEERS FOUND MATCHING YOUR CRITERIAS!");
        }
        else
        {
            <table class="table table-hover container-fluid">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => beers[0].ImageURL)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => beers[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => beers[0].ABV)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => beers[0].Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => beers[0].Mililiters)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => beers[0].AvgRating)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => beers[0].StyleName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => beers[0].BreweryName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Beers)
                    {
                        <tr>
                            <td>
                                <img src="~/images/beers/@item.ImageURL" width="100px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ABV)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mililiters)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AvgRating)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StyleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BreweryName)
                            </td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
