@model WishListSearchViewModel

@{
    ViewData["Title"] = "WishList";
}
<div class="container">

    <h1>WishLists</h1>

    @if (Model.Name == null)
    {
        <h3>There are currently no beers in your wishlist</h3>
    }
    else
    {
        <form class="form-inline d-flex justify-content-center md-form form-sm active-orange" asp-controller="Account" asp-action="WishLists" method="post">
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <select asp-for="@Model.Name" asp-items="@(new SelectList(ViewBag.WishListNames))">
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-warning">Search</button>
            </div>
        </form>


        @Html.DisplayNameFor(model => model.Name)


        <table class="table">
            <thead>
                <tr>
                    <th>
                        BeerName
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.WishList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a asp-controller="Beers" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }




</div>
<div>
    <a asp-controller="Account" asp-action="Manage">Back to profile</a>
</div>